<div class="container">
  <div class="row">
   <h2 class ="text-center">Recent flats</h2>
    <% data.cities.each do |city| %>
      <div class="col-md-4">
        <div class="card" style="background-image: url(<%= city.picture %>);">
          <h2><%= city.name %></h2>
          <p><%= city.address %></p>
          <p><%= city.type %></p>
          <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
        </div>
      </div>
    <% end %>
  </div>
</div>





